function shortenNumber(suffixes, base) {
  return function(val) {
        if(/^\d+$/.test(val)) {
            var i = 0;
            while(val / base >= 1 && i < suffixes.length - 1) {
                val = parseInt(val / base);
                i++;
            }
            return val + suffixes[i];
        } else if(Array.isArray(val)) {
            return val.toString();
        } else
            return val;
    }
}
